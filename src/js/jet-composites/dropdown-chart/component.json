{
  "name": "dropdown-chart",
  "version": "1.0.0",
  "jetVersion": "^18.0.0",
  "displayName": "A user friendly, translatable name of the component.",
  "description": "A translatable high-level description for the component.",
  "properties": {
    "chartType": {
      "description": "Initial value of the charts to define the chart type",
      "type": "string"
    }
  },
  "methods": {},
  "events": {
    "chartTypeChanged": {
      "description": "Handling the type chart change",
      "bubbles": true,
      "detail": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "description": "The new chart type"
          },
          "previousValue": {
            "type": "string",
            "description": "The previous chart type"
          },
          "updatedFrom": {
            "type": "string",
            "description": "Indicates the source of the update (user/programmatic)"
          }
        }
      }
    }
  },
  "slots": {
    "toobar": {
      "description": "Toolbar for working with chart."
    }
  }
}